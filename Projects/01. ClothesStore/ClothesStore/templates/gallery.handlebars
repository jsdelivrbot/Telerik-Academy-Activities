<div class="container">
    <form class="form-horizontal">
        <fieldset class="text-center">
            <div class="form-group filter-label">
                <label for="tb-filter" class="col-lg-2 control-label filter-name">Filter:</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" id="tb-filter" placeholder="Filter by name">
                </div>
            </div>
        </fieldset>
    </form>

    <div class="row">
        {{#each this}}
            <div class="col-md-4 gallery-list items">
                <a class="gallery-item" data-id="{{_id}}" href="#/{{category}}/{{_id}}">
                    <label class="item-name">{{name}}</label>
                    <img class="thumbnail item-img" src="{{imageURL}}" />
                </a>
            </div>
        {{/each}}
    </div>

    <a href="#/categories" class="btn btn-default btn-back">Back to categories</a>
</div>